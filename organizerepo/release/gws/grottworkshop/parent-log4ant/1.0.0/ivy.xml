<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info
        organisation="gws.grottworkshop"
        module="parent-log4ant"
        revision="1.0.0"
        publication="012013"
        status="release">
         <license name="Apache 2.0 License" url="http://www.apache.org/licenses/LICENSE-2.0.html"/>
        <ivyauthor name="Fred Grott, GrottWorkShop" url="http://about.me/fredrott"/>
        <description homepage="http://shareme,.github.com">
      Groups the log4ant libraries and deps together. I always use slf4j not log4j thus the 
      slf4j-api is included.
        </description>
	</info>
	<configurations>
	      <conf name="anttask" description="anttask libraries"/>
	</configurations>
	<dependencies>
	        <dependency org="org.jwaresoftware" name="log4ant" revision="3.5.0b2" conf="anttask"/>
	        <dependency org="org.jwaresoftware" name="antxtras" revision="3.5.0b2" conf="anttask"/>
	        <dependency org="org.slf4j" name="slf4j-api" revision="1.7.0" conf="anttask"/>
	</dependencies>
</ivy-module>
